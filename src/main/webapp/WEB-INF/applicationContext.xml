<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config />

  <bean id="easyComponent" class="org.restlet.ext.spring.SpringComponent">
    <property name="defaultTarget" ref="easyApplication" />
  </bean>

  <bean id="easyApplication" class="org.restlet.Application">
    <property name="root" ref="router" />
  </bean>

  <!--  Define the router -->
  <bean name="router" class="org.restlet.ext.spring.SpringBeanRouter" />

  <!-- Define all the routes -->
  <bean name="/hello" class="com.tngtech.webapp.easy.restlet.EasyResource" scope="prototype" autowire="byName"/>
</beans>